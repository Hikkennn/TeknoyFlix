<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet the Developers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/dev1_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dev1"
            android:contentDescription="Developer 1 Image"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <TextView
            android:id="@+id/dev1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano-os, Iesus Rey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_toEndOf="@id/dev1_image"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev1_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Year IT student in Cebu Institute of Technology - University"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/dev1_name"
            android:layout_toEndOf="@id/dev1_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev1_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills: Java, Kotlin, Android Development"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_below="@id/dev1_bio"
            android:layout_toEndOf="@id/dev1_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev1_fun_facts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fun Fact: Miss ko parin siya."
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_below="@id/dev1_skills"
            android:layout_toEndOf="@id/dev1_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/dev2_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dev1"
            android:contentDescription="Developer 2 Image"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clipToOutline="true"
            android:outlineProvider="background"/>

        <TextView
            android:id="@+id/dev2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apor, Ken Ferry"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_toEndOf="@id/dev2_image"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev2_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Year IT student in Cebu Institute of Technology - University"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/dev2_name"
            android:layout_toEndOf="@id/dev2_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev2_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills: JavaScript, React Native, Web Development"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_below="@id/dev2_bio"
            android:layout_toEndOf="@id/dev2_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/dev2_fun_facts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fun Fact: Enjoys playing video games in free time!"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_below="@id/dev2_skills"
            android:layout_toEndOf="@id/dev2_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/team_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Vision: To build innovative apps that simplify daily life."
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="16dp"/>

</LinearLayout>
